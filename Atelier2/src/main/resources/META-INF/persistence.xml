<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>ma.fstt.atelier2.model.Panier</class>
        <class>ma.fstt.atelier2.model.Produit</class>
        <class>ma.fstt.atelier2.model.LignePanier</class>
        <class>ma.fstt.atelier2.model.Vitrine</class>
        <class>ma.fstt.atelier2.model.Internaute</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/atelier2jpa"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- EclipseLink DDL Generation -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
            <property name="eclipselink.create-ddl-jdbc-file-name" value="create.sql"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="drop.sql"/>

            <!-- SQL Logging -->
            <property name="eclipselink.logging.level" value="FINE"/> <!-- or FINER for more detail -->
            <property name="eclipselink.logging.level.sql" value="FINE"/> <!-- Logs SQL statements -->
            <property name="eclipselink.logging.parameters" value="true"/> <!-- Logs parameter bindings -->
            <property name="eclipselink.logging.logger" value="DefaultLogger"/> <!-- Console output -->




        </properties>
    </persistence-unit>
</persistence>
